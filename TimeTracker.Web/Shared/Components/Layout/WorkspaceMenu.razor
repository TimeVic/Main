@inherits BaseComponent

@if (_workpsaceState.Value.IsLoaded)
{
    <RadzenSplitButton 
        Text="@_authState.Value.Workspace.Name"
        Variant="Variant.Outlined" 
        ButtonStyle="ButtonStyle.Secondary"
        Click=@(args => OnClickToMenuItem(args.Value))
        class="mr-2"
    >
        <ChildContent>
            @foreach (var workspace in _workpsaceState.Value.List)
            {
                if (_authState.Value.Workspace.Id != @workspace.Id)
                {
                    <RadzenSplitButtonItem Text="@workspace.Name" Value="@workspace.Id.ToString()"/>     
                }  
            }
        </ChildContent>
    </RadzenSplitButton>
    <RadzenButton
        ButtonStyle="ButtonStyle.Secondary"
        Icon="build"
        Click="NavigateToEditPage"
        class="mr-2"
    />
}
