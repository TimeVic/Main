@using TimeTracker.Api.Shared.Dto.RequestsAndResponses.Dashboard.Tasks.List

@inherits BaseComponent

<RadzenTemplateForm TItem="AddRequest" Data="@model" Submit="HandleSubmit">
    <DataAnnotationsValidator/>
    <ValidationSummary/>

    <RadzenStack
        Orientation="Orientation.Vertical"
        JustifyContent="JustifyContent.Start">

        <div>
            <RadzenLabel
                Text="Select project"
                TextStyle="@TextStyle.Subtitle2"/>
            <ProjectsDropDown
                Class="w-100"
                ValueChanged="value => model.ProjectId = value"/>
        </div>

        <div>
            <RadzenLabel
                Text="Enter list name"
                TextStyle="@TextStyle.Subtitle2"/>
            <RadzenTextBox @bind-Value="model.Name" Class="w-100"/>
        </div>
    </RadzenStack>

    <div class="row justify-content-center">
        <div class="col-md-12 d-flex align-items-end justify-content-center mt-4">
            <RadzenButton
                ButtonType="ButtonType.Button"
                Disabled="@_isLoading"
                ButtonStyle="ButtonStyle.Secondary"
                Click="CloseModal"
                Text="Cancel"/>
            <RadzenButton
                ButtonType="ButtonType.Submit"
                Disabled="@_isLoading"
                class="ml-3"
                Text="Add"/>
        </div>
    </div>
</RadzenTemplateForm>
