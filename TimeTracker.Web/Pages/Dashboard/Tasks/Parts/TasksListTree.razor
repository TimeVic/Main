@using TimeTracker.Web.Pages.Dashboard.Shared

@inherits BaseComponent

<RadzenCard class="mx-auto">
    <RadzenTree Style="width: 100%;" ValueChanged="OnSelectedTestsList">
        @if (!TasksList.Any())
        {
            <RadzenText TextStyle="TextStyle.Caption">Task lists not found</RadzenText>
        }
        @foreach (var project in Projects)
        {
            var tasksList = GetTasksList(project);
            if (tasksList.Any())
            {
                <RadzenTreeItem Text="@project.Name" Expanded="true">
                    <ChildContent>
                        @foreach (var list in tasksList)
                        {
                            <RadzenTreeItem Text="@list.Name" Value="@list.Id">
                                <Template>
                                    <RadzenText
                                        TextStyle="TextStyle.Subtitle2"
                                        class="w-100">
                                        @context.Text
                                    </RadzenText>
                                </Template>
                            </RadzenTreeItem>
                        }
                    </ChildContent>
                    <Template>
                        <b>
                            @context.Text
                        </b>
                    </Template>
                </RadzenTreeItem>
            }
        }
    </RadzenTree>
    <hr/>
    <RadzenButton
        Variant="Variant.Text"
        ButtonStyle="ButtonStyle.Primary"
        Class="w-100"
        Click="ShowAddTaskListModal"
        Icon="add">
        Add list
    </RadzenButton>
</RadzenCard>
