@page "/dashboard/integrations"

@using TimeTracker.Web.Pages.Dashboard.Shared
@using TimeTracker.Web.Pages.Dashboard.Integrations.Parts

@inherits BaseComponent
@layout Layout

@if (_isLoading)
{
    <RadzenProgressBar Value="100" ShowValue="false" Mode="ProgressBarMode.Indeterminate"/>
}
else
{
    <RadzenTabs TabPosition="@TabPosition.Top" RenderMode="TabRenderMode.Client" >
        <Tabs>
            <RadzenTabsItem Text="ClickUp">
                <ClickUpSettingsForm @bind-Value="_settings.IntegrationClickUp"/>
            </RadzenTabsItem>
            <RadzenTabsItem Text="Redmine">
                <RedmineSettingsForm @bind-Value="_settings.IntegrationRedmine"/>
            </RadzenTabsItem>
        </Tabs>
    </RadzenTabs>    
}
