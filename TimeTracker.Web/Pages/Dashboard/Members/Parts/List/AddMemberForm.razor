@inherits BaseComponent

@using TimeTracker.Api.Shared.Dto.RequestsAndResponses.Dashboard.WorkspaceMembership

<RadzenTemplateForm TItem="AddRequest" Data="@model" Submit="HandleSubmit">
    <DataAnnotationsValidator/>
    <ValidationSummary/>

    <div class="mb-2">
        <RadzenLabel
            Text="Enter email"
            class="col-lg-12 col-sm-3 mb-3"/>
        <RadzenTextBox @bind-Value="model.Email" Class="w-100 mb-3 col"/>
    </div>
    <RadzenButton
        ButtonType="ButtonType.Submit"
        Text="Add new member"/>
</RadzenTemplateForm>
