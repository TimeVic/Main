@using TimeTracker.Web.Store.Auth
@inherits BaseComponent

<RadzenSidebar>
    <RadzenPanelMenu Match="NavLinkMatch.All">
        <RadzenPanelMenuItem
            Icon="apps"
            Text="Track Time"
            Path="@SiteUrl.Dashboard_TimeEntry"/>
        <RadzenPanelMenuItem
            Icon="assessment"
            Text="Summary"
            Path="@SiteUrl.Dashboard_Reports_Summary"/>
        <RadzenPanelMenuItem Text="Tasks" Icon="task">
            <RadzenPanelMenuItem
                Icon="scatter_plot"
                Text="Without client"
                Path="@GetTasksListUrl()"/>
            @foreach (var client in Clients)
            {
                <RadzenPanelMenuItem
                    Icon="scatter_plot"
                    Text="@client.Name"
                    Path="@GetTasksListUrl(client.Id)"/>
            }
        </RadzenPanelMenuItem>
        <RadzenPanelMenuItem
            Icon="euro_symbol"
            Text="Payments"
            Path="@SiteUrl.Dashboard_Payments"/>
        <RadzenPanelMenuItem Text="Reports" Icon="assessment">
            <RadzenPanelMenuItem
                Icon="euro_symbol"
                Text="Payments"
                Path="@SiteUrl.Dashboard_Reports_Payments"/>
            <RadzenPanelMenuItem
                Icon="line_weight"
                Text="Detailed"
                Path="@SiteUrl.Dashboard_Reports_TimeEntries"/>
        </RadzenPanelMenuItem>
        <RadzenPanelMenuItem Text="Workspace" Icon="dashboard">
            <RadzenPanelMenuItem
                Icon="chrome_reader_mode"
                Text="Projects"
                Path="@SiteUrl.Dashboard_Projects"/>
            <RadzenPanelMenuItem
                Icon="assignment_ind"
                Text="Clients"
                Path="@SiteUrl.Dashboard_Clients"/>
            <RadzenPanelMenuItem
                Icon="local_offer"
                Text="Tags"
                Path="@SiteUrl.Dashboard_Tags"/>
            <RadzenPanelMenuItem
                Icon="face"
                Text="Members"
                Path="@(AuthState.Value.IsRoleAdmin ? SiteUrl.Dashboard_Members : null)"/>
            <RadzenPanelMenuItem
                Icon="compare_arrows"
                Text="Integrations"
                Path="@SiteUrl.Dashboard_Integrations"/>
        </RadzenPanelMenuItem>
    </RadzenPanelMenu>
</RadzenSidebar>
