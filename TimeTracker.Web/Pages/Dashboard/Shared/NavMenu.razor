@using TimeTracker.Web.Store.Auth
@inherits BaseComponent

<RadzenSidebar>
    <RadzenPanelMenu>
        <RadzenPanelMenuItem
            Icon="apps"
            Text="Track Time"
            Path="@SiteUrl.Dashboard_TimeEntry"/>
        <RadzenPanelMenuItem
            Icon="chrome_reader_mode"
            Text="Projects"
            Path="@SiteUrl.Dashboard_Projects"/>
        <RadzenPanelMenuItem
            Icon="assignment_ind"
            Text="Clients"
            Path="@SiteUrl.Dashboard_Clients"/>
        <RadzenPanelMenuItem
            Icon="euro_symbol"
            Text="Payments"
            Path="@SiteUrl.Dashboard_Payments"/>
        <RadzenPanelMenuItem Text="Reports" Icon="assessment">
            <RadzenPanelMenuItem
                Icon="euro_symbol"
                Text="Payments"
                Path="@SiteUrl.Dashboard_Reports_Payments"/>
            <RadzenPanelMenuItem
                Icon="line_weight"
                Text="Detailed"
                Path="@SiteUrl.Dashboard_Reports_TimeEntries"/>
        </RadzenPanelMenuItem>
        <RadzenPanelMenuItem Text="Workspace" Icon="dashboard">
            <RadzenPanelMenuItem
                Icon="face"
                Text="Members"
                Path="@(AuthState.Value.IsRoleAdmin ? SiteUrl.Dashboard_Members : null)"/>
        </RadzenPanelMenuItem>
    </RadzenPanelMenu>
</RadzenSidebar>
